    <script>
        var time
        $('.icon-right').on('click',function(){
            if(time) return
            var a = Math.floor($('.store').width() / $('.session').width())
            var long = -($('.session').length-1) * $('.session').width() 
            time = setTimeout(function(){
            if(parseInt($('.session').eq(0).css('margin-left')) <= long ) return time = 0
            var a = Math.floor($('.store').width() / $('.session').width())
            var b = a * Math.floor($('.session').width()) 
            $('.session').eq(0).css('margin-left','-=' + b)
            console.log(b)
            time = 0
            },300)
        })
        $('.icon-left').on('click',function(){
            if(time) return
            time = setTimeout(function(){
            if(parseInt($('.session').eq(0).css('margin-left')) >= 20 ) return time = 0
            var a = Math.floor($('.store').width() / $('.session').width())
            var b = a *  Math.floor($('.session').width() )
            $('.session').eq(0).css('margin-left','+=' + b)
            time = 0
            },300)
        })
        
        $.getJSON('http://jirenguapi.applinzi.com/fm/getChannels.php')
        .done(function(ret){
            for(var i = 0;i < $('.choice').length;i++){
                $('.choice').eq(i).css('background-image','url(' + ret.channels[i+3].cover_small + ')')  
            } 
        }).fail(function(){
            console.log('error')
        })   

        var index = 0
        var isDataArrive = true
        var audio = new Audio()
        audio.autoplay
        function getData(callback,type,index){
            isDataArrive = false
            $.ajax({
                url:'http://tingapi.ting.baidu.com/v1/restserver/ting',
                type:'GET',
                dataType:'jsonp',
                data:{
                    method:'baidu.ting.billboard.billList',
                    format:'json',
                    from:'webapp_music',
                    type:type,
                    size:1,
                    offset:index
                }
            }).done(function(ret){ 
                console.log(ret)
                
                callback(ret.song_list[0])})
        }    
        function getSong(callback,number){
            $.ajax({
                url:'http://tingapi.ting.baidu.com/v1/restserver/ting',
                type:'GET',
                dataType:'jsonp',
                data:{
                    method:'baidu.ting.song.play',
                    songid:number
                }
            }).done(function(ret){ 
                console.log(ret)
                isDataArrive = true
                callback(ret.bitrate.show_link)})
            .fail(function(){isDataArrive = true})
        }
        function getLry(callback,number){
            $.ajax({
                url:'http://tingapi.ting.baidu.com/v1/restserver/ting',
                type:'GET',
                dataType:'jsonp',
                data:{
                    method:'baidu.ting.song.lry',
                    songid:number
                }
            }).done(function(ret){ 
                console.log(ret)
                callback(ret)})
        } 
        function getInfo(type,index){
            getData(function(info){
                $('.name').text(info.title)
                $('.singer').text(info.artist_name)
                $('.bgp').css({'background-image': 'url('+info.pic_radio+')'})
                $('.img').css({'background-image': 'url('+info.pic_radio+')'})
                getSong(function(song){
                    audio.src=song
                    audio.play()
                },info.song_id)
                getLry(function(ret){
                    var lrc = ret.lrcContent
                    var arr = lrc
                    var obj = {}
                    arr.split('\n').forEach(function(line){
                        var times = line.match(/\d{2}:\d{2}/g)
                        var lyric = line.replace(/\[\d{2}:\d{2}.\d{2}\]/g,'')
                        obj[times] = lyric
                        audio.ontimeupdate = function(){
                            var sec = Math.floor(audio.currentTime % 60)
                            var min = Math.floor(audio.currentTime / 60)
                            function second(){
                                if(sec < 10){return ('0' + Math.floor(audio.currentTime % 60))}
                                return sec
                            }
                            $('.time').text(min + ':' + second())
                            var a = audio.currentTime/audio.duration
                            $('.probar').css({'width': Math.floor((audio.currentTime/audio.duration) * 1000)/10 + '%'})
                            var lyricNow = '0' + min + ':' + second()
                            $('.lyric').text(obj[lyricNow])
                        }
                    })
                },info.song_id)
            },type,index)
        } 
        
         
        function click(type,sessionNum){
            $('.btn').children().eq(1).addClass('icon-stop').removeClass('icon-start-copy')
            var index = 0
            if(!isDataArrive) return
            getInfo(type,index)
            $('.kind').text($('.discribe').eq(sessionNum).text())

            $('.btn').children().eq(1).on('click',function(){ 
                if(!isDataArrive) return
                if(!audio.paused){
                    audio.pause()
                    $('.btn').children().eq(1).removeClass('icon-stop').addClass('icon-start-copy')
                }
                else{
                    audio.play()
                    $('.btn').children().eq(1).addClass('icon-stop').removeClass('icon-start-copy')
                }    
            })
       
            $('.icon-left1').on('click',function(){
                if(!isDataArrive) return
                if(index <= 0) return
                $('.btn').children().eq(1).addClass('icon-stop').removeClass('icon-start-copy')
                index--
                getInfo(type,index)
            })
            $('.icon-right1').on('click',function(){
                if(!isDataArrive) return
                $('.btn').children().eq(1).addClass('icon-stop').removeClass('icon-start-copy')
                index++
                getInfo(type,index)
            })
            $('.process').on('click',function(e){
                console.log(e)
            var percent=e.offsetX/parseInt($('.process').width())
            console.log(percent)
            audio.currentTime=audio.duration * percent
        })
        }
        
        $('.choice').eq(0).on('click',function(){
            click(1,0)
        })
        $('.choice').eq(1).on('click',function(){
            click(2,1)
        })
        $('.choice').eq(2).on('click',function(){
            click(11,2)
        })
        $('.choice').eq(3).on('click',function(){
            click(12,3)
        })
        $('.choice').eq(4).on('click',function(){
            click(16,4)
        })
        $('.choice').eq(5).on('click',function(){
            click(21,5)
        })
        $('.choice').eq(6).on('click',function(){
            click(22,6)
        })
        $('.choice').eq(7).on('click',function(){
            click(23,7)
        })
        $('.choice').eq(8).on('click',function(){
            click(24,8)
        })
        $('.choice').eq(9).on('click',function(){
            click(25,9)
        })
        
  
        
    </script>
</body>
